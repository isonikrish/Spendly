generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  Budgets  Budgets[]
  Incomes  Incomes[]
}

model Budgets {
  id     Int    @id @default(autoincrement())
  name   String
  amount Float
  spent Float @default(0)
  icon   String
  userId Int
  User   User   @relation(fields: [userId], references: [id])
}

model Incomes {
  id     Int    @id @default(autoincrement())
  name   String
  amount Float
  icon   String
  userId Int
  User   User   @relation(fields: [userId], references: [id])
}
