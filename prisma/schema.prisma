generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  Budgets  Budgets[]
  Incomes  Incomes[]
  Expenses Expenses[]
}

model Budgets {
  id     Int    @id @default(autoincrement())
  name   String
  amount Float
  icon   String
  userId Int
  spent  Float  @default(0)
  User   User   @relation(fields: [userId], references: [id])
  expenses Expenses[]

}

model Incomes {
  id     Int    @id @default(autoincrement())
  name   String
  amount Float
  icon   String
  userId Int
  User   User   @relation(fields: [userId], references: [id])
}


model Expenses {
  id Int @id @default(autoincrement())
  name String
  amount Float @default(0)
  createdAt DateTime @default(now())
  budgetId Int
  budget Budgets @relation(fields: [budgetId], references: [id])
  userId Int
  user User @relation(fields: [userId], references: [id])
}