generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Budgets {
  id       Int        @id @default(autoincrement())
  name     String
  amount   Float
  icon     String
  userId   Int
  spent    Float      @default(0)
  User     User       @relation(fields: [userId], references: [id])
  Expenses Expenses[]
}

model Incomes {
  id     Int    @id @default(autoincrement())
  name   String
  amount Float
  icon   String
  userId Int
  User   User   @relation(fields: [userId], references: [id])
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  email    String     @unique
  password String
  Budgets  Budgets[]
  Expenses Expenses[]
  Incomes  Incomes[]
}

model Expenses {
  id        Int      @id @default(autoincrement())
  name      String
  amount    Float    @default(0)
  budgetId  Int
  userId    Int
  createdAt DateTime @default(now())
  Budgets   Budgets  @relation(fields: [budgetId], references: [id])
  User      User     @relation(fields: [userId], references: [id])
}
